# ESSENTIAL CONFIGURATION FOR RUNNING THE SERVICE
# Replace the values below with your actual credentials

# ========================================
# REQUIRED: OpenAI Configuration
# ========================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ========================================
# REQUIRED: Security
# ========================================
SECRET_KEY=your-super-secret-key-change-this-in-production-12345

# ========================================
# OPTIONAL: Redis Configuration (defaults work)
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# ========================================
# OPTIONAL: Flask Configuration (defaults work)
# ========================================
FLASK_ENV=development
DEBUG=True
PORT=5000
HOST=0.0.0.0

# ========================================
# OPTIONAL: Vector Database (defaults work)
# ========================================
FAISS_INDEX_PATH=./data/faiss_index
EMBEDDINGS_MODEL=all-MiniLM-L6-v2
VECTOR_DIMENSION=384
MAX_SEARCH_RESULTS=10

# ========================================
# OPTIONAL: Data Processing (defaults work)
# ========================================
DATA_DIRECTORY=./data/raw
PROCESSED_DATA_DIRECTORY=./data/processed
CRAWL_DELAY=1.0
MAX_CRAWL_PAGES=1000
BATCH_SIZE=100

# ========================================
# OPTIONAL: Performance (defaults work)
# ========================================
MAX_WORKERS=4
REQUEST_TIMEOUT=30
RATE_LIMIT=100

# ========================================
# OPTIONAL: Logging (defaults work)
# ========================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/app.log

# ========================================
# OPTIONAL: Monitoring (defaults work)
# ========================================
METRICS_ENABLED=True
HEALTH_CHECK_INTERVAL=60